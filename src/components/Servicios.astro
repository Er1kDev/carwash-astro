---
const { title, servicios } = Astro.props;
---

<section class="flex flex-col text-center bg-black text-white py-16">
    <h3 class="md:text-7xl text-4xl" data-aos="zoom-in">
        {title}
    </h3>
    {
        servicios.map((servicio) => (
            <article class="pt-3" data-aos="zoom-in">
                <p class="md:text-5xl text-2xl pb-2">{servicio.title}</p>
                <p class="md:text-4xl text-xl">{servicio.descripcion}</p>
            </article>
        ))
    }
</section>
